@model Produto
@{
    ViewBag.Subtitulo = "Cadastro de Produto";
}

<h1 class="text-primary">Cadastro de Produto</h1>
<hr>
<form method="POST" class="w-25">
    <input type="hidden" asp-for="IdProduto">
    <div class="form-group">
        <label asp-for="Descricao">Descrição:</label><br>
        <input asp-for="Descricao" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Valor">Valor:</label><br>
        <input asp-for="Valor" class="form-control">
    </div>
    <div class="mt-3">
        <a href="/Produtos/Index" class="btn btn-light">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>
