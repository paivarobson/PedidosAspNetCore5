@model Produto
@{
    ViewBag.Subtitulo = "Alteração de Produto";
}

<h1 class="text-primary">Alteração de Produto</h1>
<hr>
<form method="POST" class="w-25">
    <input type="hidden" asp-for="ProdutoId">
    <div class="form-group">
        <label asp-for="DataCadastro">Data de Cadastro:</label><br>
        <input asp-for="DataCadastro" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Descricao">Descrição:</label><br>
        <input asp-for="Descricao" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Preco">Preço:</label><br>
        <input asp-for="Preco" class="form-control">
    </div>
    <div class="mt-3">
        <a href="/Produtos/Index" class="btn btn-light">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>
