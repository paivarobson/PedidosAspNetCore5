@{
    var controllerAtual = ViewContext.RouteData.Values["controller"].ToString();
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
    <title>Pedidos :: @ViewBag.Subtitulo</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Controle de Pedidos</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <div class="navbar-nav">
                    <a class="nav-link @(controllerAtual == "Home" ? "active" : "")" asp-controller="Home"
                        asp-action="Index">Home</a>
                    <a class="nav-link @(controllerAtual == "Pedidos" ? "active" : "")" asp-controller="Pedidos"
                        asp-action="Index">Pedidos</a>
                    <a class="nav-link @(controllerAtual == "Fornecedores" ? "active" : "")"
                        asp-controller="Fornecedores" asp-action="Index">Fornecedores</a>
                    <a class="nav-link @(controllerAtual == "Produtos" ? "active" : "")" asp-controller="Produtos"
                        asp-action="Index">Produtos</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container mt-2">
        @RenderBody()
    </div>
</body>

</html>