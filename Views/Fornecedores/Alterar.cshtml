@model Fornecedor
@{
    ViewBag.Subtitulo = "Alteração de Fornecedor";
}

<h1 class="text-primary">Alteração de Fornecedor</h1>
<hr>
<form method="POST" class="w-25">
    <input type="hidden" asp-for="FornecedorId">
    <div class="form-group">
        <label asp-for="FornecedorId">Código:</label><br>
        <input asp-for="FornecedorId" disabled="true" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="RazaoSocial">Razão Social:</label><br>
        <input asp-for="RazaoSocial" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="CNPJ">CNPJ:</label><br>
        <input asp-for="CNPJ" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="UF">UF:</label><br>
        <input asp-for="UF" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="EmailContato">E-mail para contato:</label><br>
        <input asp-for="EmailContato" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="NomeContato">Nome do Contato:</label><br>
        <input asp-for="NomeContato" class="form-control">
    </div>
    <div class="mt-3">
        <a href="/Fornecedores/Index" class="btn btn-light">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>
