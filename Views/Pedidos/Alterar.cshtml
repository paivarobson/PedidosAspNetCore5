@model Pedido
@{
    ViewBag.Subtitulo = "Alteração do Pedido";
}

<h1 class="text-primary">Alteração do Pedido</h1>
<hr>
<form method="POST" class="w-25">
    <input type="hidden" asp-for="PedidoId">
    <div class="form-group">
        <label asp-for="PedidoId">Código:</label><br>
        <input asp-for="PedidoId" disabled="true" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="DataCadastro">Data do Cadastro:</label><br>
        <input asp-for="DataCadastro" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="FornecedorId">Fornecedor:</label><br>
        <select asp-for="FornecedorId" asp-items="@ViewBag.Fornecedores"></select>
    </div>
    <div class="form-group">
        <label asp-for="Valor">Valor Total do Pedido:</label><br>
        <input asp-for="Valor" class="form-control">
    </div>
    <div class="mt-3">
        <a href="/Pedidos/Index" class="btn btn-light">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>
