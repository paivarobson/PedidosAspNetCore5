@model Pedido
@{
    ViewBag.Subtitulo = "Cadastro de Pedido";
}

<h1 class="text-primary">Cadastro de Pedido</h1>
<hr>
<form method="POST" class="w-25">
    <input type="hidden" asp-for="PedidoId">
    <div class="form-group">
        <label asp-for="PedidoId">CÃ³digo:</label><br>
        <input asp-for="PedidoId" readonly="true" value="@ViewBag.CodigoProximoPedido" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="DataCadastro">Data do Cadastro:</label><br>
        <input asp-for="DataCadastro" readonly="true" value="@ViewBag.DataCadastro" class="form-control">
