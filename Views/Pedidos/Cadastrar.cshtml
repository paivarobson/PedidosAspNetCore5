@model Pedido
@{
    ViewBag.Subtitulo = "Cadastro de Pedido";
}

<h1 class="text-primary">Cadastro de Pedido</h1>
<hr>
<form method="POST" class="w-25">
    <input type="hidden" asp-for="IdPedido">
    <div class="form-group">
        <label asp-for="DataCadastro">Data do Cadastro:</label><br>
        <input asp-for="DataCadastro" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ValorTotal">Valor Total do Pedido:</label><br>
        <input asp-for="ValorTotal" class="form-control">
    </div>
    <div class="mt-3">
        <a href="/Pedidos/Index" class="btn btn-light">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>
